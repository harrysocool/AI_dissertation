    \vskip 3in
    \Large \bf \@title \par
  }
  \vskip 0.3in
  \par
  by
  \par
  {\Large \bf \@author}
  \par
  \@submitdate
  \vskip 3in
  \par
  { 
    \large A dissertation submitted in partial fulfilment of the degree of 
    \par
    \large MSc. \@degreename
  }
  \vfil
  \end{titlepage}
}

\def\titlepage{
  \newpage
  \centering
  \linespread{1}
  \normalsize
  \vbox to \vsize\bgroup\vbox to 9in\bgroup
}
\def\endtitlepage{
  \par
  \kern 0pt
  \egroup
  \vss
  \egroup
  \cleardoublepage
}

